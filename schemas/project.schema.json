{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiandme.io/hivex/project.schema.json",
  "type": "object",
  "required": ["slug", "title", "status", "branch"],
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "title": { "type": "string", "minLength": 3 },
    "status": { "enum": ["planned", "active", "published", "archived"] },
    "branch": { "type": "string", "pattern": "^project/.+" },
    "dates": {
      "type": "object",
      "properties": {
        "announced": { "type": "string", "format": "date" },
        "testing_start": { "type": "string", "format": "date" },
        "publish_week": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
